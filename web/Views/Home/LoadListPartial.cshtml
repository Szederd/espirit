
@model webapp.Models.ListFilterModel
    @Html.HiddenFor(model => model.SortCol)
    @Html.HiddenFor(model => model.SortOrder)
    @Html.HiddenFor(model => model.PageIndex)
<table>
    <colgroup>
        <col style="width:10%" />
        <col style="width:10%" />
        <col style="width:80%" />
    </colgroup>
    <caption>Táblázat</caption>
    <thead><tr>
    <th><a href="#" class="sortedcol @(Model.SortCol == "mgd" ? "sorted" + Model.SortOrder : null)" data-sortorder="mgd">MGD</a></th>
    <th><a href="#" class="sortedcol @(Model.SortCol == "numeric" ? "sorted" + Model.SortOrder : null)" data-sortorder="numeric">Szám</a></th>
    <th><a href="#" class="sortedcol @(Model.SortCol == "text" ? "sorted" + Model.SortOrder : null)" data-sortorder="text">Szöveg</a></th>
</tr></thead>
    <tbody>
        @Html.DisplayFor(model => model.Items)
    </tbody>
    <tfoot>
        <tr><td colspan="3">
                @for (int i = 0; i < Model.AllCount / Model.PageSize; i++)
                {
                    <a href="#" class="pagenum @(i==Model.PageIndex?"current":"") " data-pageindex="@i">@(i+1)</a>
                }
            </td>
        </tr>
    </tfoot>
</table>